@page "/TransactionHistory"
@using System.Linq
@inject IAccountService AccountService

<PageTitle>Transaction History</PageTitle>

<h3>Transaction History</h3>

<div class="row gy-4">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body d-flex flex-column gap-3">
                <label class="form-label">Filter account</label>
                <InputSelect TValue="Guid" class="form-select mb-2" @bind-Value="_selectedAccountId">
                    <option value="@Guid.Empty">All accounts</option>
                    @foreach (var acc in _accounts)
                    {
                        <option value="@acc.Id">@acc.Name (@acc.Currency) — @acc.Balance.ToString("N2")</option>
                    }
                </InputSelect>

                <div class="small text-muted">Total transactions: @(_allTransactions?.Count ?? 0)</div>

                <div class="d-flex flex-wrap gap-2">
                    <button class="btn btn-sm btn-outline-secondary" @onclick="Reload">Refresh</button>
                    <NavLink class="btn btn-sm btn-primary" href="/Transfer">
                        <span class="bi bi-plus me-1" aria-hidden="true"></span> New transfer
                    </NavLink>
                    <NavLink class="btn btn-sm btn-secondary" href="/DepositWithdraw">
                        <span class="bi bi-cash-stack me-1" aria-hidden="true"></span> Deposit / Withdraw
                    </NavLink>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                @if (_allTransactions == null || !_allTransactions.Any())
                {
                    <div class="text-muted">No transactions to display.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-striped align-middle">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-end">Balance</th>
                                    <th>From</th>
                                    <th>To</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tx in FilteredTransactions)
                                {
                                    <tr>
                                        <td>@tx.TimeStamp.ToLocalTime().ToString("g")</td>
                                        <td>@tx.TransactionType</td>
                                        <td class="text-end">@tx.Amount.ToString("N2")</td>
                                        <td class="text-end">@tx.BalanceAfter.ToString("N2")</td>
                                        <td>@GetAccountName(tx.FromAccountId)</td>
                                        <td>@GetAccountName(tx.ToAccountId)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<BankAccount> _accounts = new();
    private List<Transaction> _allTransactions = new();
    private Guid _selectedAccountId = Guid.Empty;

    private IEnumerable<Transaction> FilteredTransactions =>
        (_selectedAccountId == Guid.Empty)
            ? _allTransactions.OrderByDescending(t => t.TimeStamp)
            : _allTransactions.Where(t => ((t.FromAccountId ?? Guid.Empty) == _selectedAccountId) || ((t.ToAccountId ?? Guid.Empty) == _selectedAccountId))
                              .OrderByDescending(t => t.TimeStamp);

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        var accounts = await AccountService.GetAccounts();
        _accounts = accounts.OfType<BankAccount>().ToList();
        _allTransactions = _accounts.SelectMany(a => a.GetTransactions()).OrderByDescending(t => t.TimeStamp).ToList();
    }

    private async Task Reload()
    {
        await LoadAsync();
        StateHasChanged();
    }

    private string GetAccountName(Guid? id)
    {
        if (id == null || id == Guid.Empty) return "-";
        var account = _accounts.FirstOrDefault(a => a.Id == id.Value);
        return account?.Name ?? id.ToString();
    }
}